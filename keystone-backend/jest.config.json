{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!**/node_modules/**",
    "!**/*.test.js"
  ],
  "testMatch": [
    "**/tests/test-firebase-tokens.js",
    "**/tests/test-reports.js",
    "**/tests/test-users.js",
    "**/tests/test-expenses.js",
    "**/tests/test-permissions.js",
    "**/tests/test-auth-functional.js",
    "**/tests/test-integration.js",
    "**/tests/test-middleware-coverage.js",
    "**/tests/test-routes-coverage.js",
    "**/tests/test-middleware-simple.js",
    "**/tests/test-sharelink-service-coverage.js",
    "**/tests/test-category-controller-coverage.js",
    "**/tests/test-demo-auth-usage-coverage.js",
    "**/tests/test-auth-service-coverage.js",
    "**/tests/test-simple-routes.js",
    "**/tests/test-routes-direct.js",
    "**/tests/test-firebase-config.js",
    "**/tests/test-permission-service-coverage.js",
    "**/tests/test-expense-controller-edge-cases.js",
    "**/tests/test-permission-service-coverage.js",
    "**/tests/test-expense-edge-cases.js",
    "**/tests/test-category-edge-cases.js",
    "**/tests/test-guest-access.js",
    "**/tests/test-categories.js",
    "**/tests/test-user-expenses.js",
    "**/tests/test-categories-delete.js",
    "**/tests/test-category-delete.js",
    "**/tests/test-category-edit.js",
    "**/tests/test-user-delete-comprehensive.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/tests/utils/",
    "/tests/setup.js",
    "/tests/test-env.js",
    "/tests/test-api.js",
    "/tests/test-prisma.js",
    "/tests/test-auth-middleware.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 30000,
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true
}
